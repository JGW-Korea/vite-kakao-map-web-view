{
  "exclude": ["node_modules"],
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts", "nativewind-env.d.ts", "src/global/types"],
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types"],
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "target": "ES2015",
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "preserve",
    "strict": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"]
  }
}
